@{
    ViewBag.Title = "Messages";
}

<h2>Your messages</h2>
<div class="container-fluid" style="width: 80%">
    <div class="notification-icon" style="margin-top: 10px">
        <i class="far fa-envelope fa-1x"></i>
        <i class="far fa-badge" id="msgCnt"></i>
    </div>

    <div id="divNotification">
    </div>
</div>

<div class="modal" id="replyModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Reply</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                @Html.TextArea("replyMessageText", new { style = "width: 100%; height: 100px;", @class = "form-control" })
            </div>

            <div class="modal-footer">
                <button id="btnReply" type="button" class="btn btn-danger" data-dismiss="modal">Send</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="replyMessageResult">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body" id="replyResultMessage">
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary" aria-label="Close">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

    $("#btnReply").click(function () {

        //replyToId comes from the _Layout.cshtml

        $.ajax({
            url: '@Url.Action("SendMessage", "Message")',
            type: 'POST',
            datatype: 'json',
            data: {
                message: $("#replyMessageText").val(),
                toId: replyToId
            },
            success: function(data) {
                $("#replyResultMessage").html(data.result);
                $("#replyMessageResult").modal('show');
            },
            error: function (xhr) {
                console.log(JSON.stringify(xhr));
                $("#replyResultMessage").html("Error " + xhr.status+": " + xhr.responseJSON);
                $("#replyMessageResult").modal('show');
            }
        });
    })
</script>